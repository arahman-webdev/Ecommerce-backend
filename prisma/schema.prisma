generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String  @id @default(cuid())
  name         String
  email        String  @unique
  password     String
  phone        String?
  address      String?
  profilePhoto String?
  profileId    String?
  bio          String?

  role   UserRole   @default(CUSTOMER)
  status UserStatus @default(ACTIVE)

  products Product[] // seller products
  reviews  Review[]
  wishlist Wishlist[]
  cart     Cart?
  orders   Order[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  addresses Address[]
}

// Address model for shipping/billing
model Address {
  id           String      @id @default(cuid())
  userId       String
  user         User        @relation(fields: [userId], references: [id])
  type         AddressType @default(SHIPPING) // SHIPPING or BILLING
  fullName     String
  phone        String
  addressLine1 String
  addressLine2 String?
  city         String
  state        String?
  postalCode   String
  country      String      @default("BD")
  isDefault    Boolean     @default(false)

  // Explicitly name the relations to Order
  shippingOrders Order[] @relation("ShippingAddress")
  billingOrders  Order[] @relation("BillingAddress")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, type, isDefault]) // One default per type per user
}

enum AddressType {
  SHIPPING
  BILLING
}

model Product {
  id          String  @id @default(cuid())
  name        String
  slug        String  @unique
  description String?

  price Float
  stock Int

  user   User   @relation(fields: [userId], references: [id])
  userId String

  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?

  productImages ProductImage[]
  reviews       Review[]
  orderItems    OrderItem[]
  wishlist      Wishlist[]
  cartItems     CartItem[]
  variants      ProductVariant[]

  // SEO
  metaTitle       String?
  metaDescription String?

  // Dimensions
  weight Float?
  width  Float?
  height Float?
  length Float?

  isActive   Boolean @default(true)
  isFeatured Boolean @default(false)

  averageRating Float @default(0)
  reviewCount   Int   @default(0)
  totalOrders   Int   @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
}

model ProductImage {
  id        String  @id @default(cuid())
  imageUrl  String?
  imageId   String?
  productId String
  product   Product @relation(fields: [productId], references: [id])

  createdAt DateTime @default(now())
}

// product variant
model ProductVariant {
  id         String      @id @default(cuid())
  color      String?
  size       String?
  product    Product     @relation(fields: [productId], references: [id])
  productId  String
  orderItems OrderItem[]
}

model Wishlist {
  id        String @id @default(cuid())
  userId    String
  productId String

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  createdAt DateTime @default(now())

  @@unique([userId, productId])
}

model Review {
  id      String  @id @default(cuid())
  rating  Int
  comment String?

  userId    String
  productId String

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  createdAt DateTime @default(now())

  @@unique([userId, productId])
}

model Cart {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  items     CartItem[]
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        String @id @default(cuid())
  cartId    String
  productId String
  quantity  Int

  cart    Cart    @relation(fields: [cartId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@unique([cartId, productId])
}

model Order {
  id          String @id @default(cuid())
  orderNumber String @unique // Custom format: ORD-20241224-001
  userId      String
  user        User   @relation(fields: [userId], references: [id])

  // Address information - FIXED with relation names
  shippingAddressId String?
  shippingAddress   Address? @relation("ShippingAddress", fields: [shippingAddressId], references: [id])
  billingAddressId  String?
  billingAddress    Address? @relation("BillingAddress", fields: [billingAddressId], references: [id])

  // Order details
  items       OrderItem[]
  subtotal    Float
  shippingFee Float       @default(0)
  tax         Float       @default(0)
  discount    Float       @default(0)
  totalAmount Float

  // Status tracking
  status OrderStatus @default(PENDING)

  // Payment
  payment Payment?

  // Shipping
  shippingMethod    String?
  trackingNumber    String?
  carrier           String?
  estimatedDelivery DateTime?

  // Customer notes
  customerNotes String?

  // Timestamps
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  sslcommerzTransaction SSLCommerzTransaction?

  // Indexes
  @@index([userId, createdAt])
  @@index([status, createdAt])
  @@index([orderNumber])
}

// Order items (products in order)
model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Float // Price at time of purchase
  name      String // Product name at time of purchase

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
 

  // Variants (if applicable)
  variantId String?
  variant   ProductVariant? @relation(fields: [variantId], references: [id])

  createdAt DateTime @default(now())

  @@unique([orderId, productId, variantId])
  @@index([productId])
}

// -------------------------
// Payments
// -------------------------
model Payment {
  id      String @id @default(cuid())
  orderId String @unique
  order   Order  @relation(fields: [orderId], references: [id])

  amount Float
  method PaymentMethod
  status PaymentStatus @default(PENDING)

  // SSL Commerz specific
  transactionId   String? @unique
  valId           String? // SSL validation ID
  bankTransaction String? // Bank transaction ID

  // Payment details (for card payments)
  cardLast4 String?
  cardBrand String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SSLCommerzTransaction {
  id              String  @id @default(cuid())
  transactionId   String  @unique
  orderId         String  @unique
  order           Order?  @relation(fields: [orderId], references: [id])
  sessionKey      String?
  gatewayUrl      String?
  valId           String?
  bankTransaction String?

  amount   Float
  currency String @default("BDT")
  status   String @default("PENDING") // PENDING, SUCCESS, FAILED, CANCELLED

  // Customer info from SSL
  cusName    String?
  cusEmail   String?
  cusPhone   String?
  cusAddress String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  ADMIN
  SELLER
  CUSTOMER
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BLOCKED
  DELETED
}

enum OrderStatus {
  PENDING
  PROCESSING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

enum PaymentMethod {
  SSL_COMMERZ
  STRIPE
  CASH_ON_DELIVERY
  BANK_TRANSFER
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
  REFUNDED
}
